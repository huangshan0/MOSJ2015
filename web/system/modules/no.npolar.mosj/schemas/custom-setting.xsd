<?xml version="1.0"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">

    <xsd:include schemaLocation="opencms://opencms-xmlcontent.xsd" />

    <xsd:element name="MOSJCustomSettings" type="OpenCmsMOSJCustomSettings" />

    <xsd:complexType name="OpenCmsMOSJCustomSettings">
        <xsd:sequence>
            <xsd:element name="MOSJCustomSetting" type="OpenCmsMOSJCustomSetting"
                    minOccurs="0" maxOccurs="unbounded" />
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="OpenCmsMOSJCustomSetting">
        <xsd:sequence>
            <xsd:element name="Name" type="OpenCmsString" />
            <xsd:element name="Value" type="OpenCmsString" />
            <!--<xsd:element name="Stacking" type="OpenCmsString" minOccurs="0" maxOccurs="1" />-->
        </xsd:sequence>
        <xsd:attribute name="language" type="OpenCmsLocale" use="optional" />
    </xsd:complexType>

    <xsd:annotation>
        <xsd:appinfo>
            <resourcebundles>
                <xmlbundle name="no.npolar.mosj">
                    <bundle locale="en">
                        <resource key="label.OpenCmsMOSJCustomSetting.Name">Setting name</resource>
                        <resource key="label.OpenCmsMOSJCustomSetting.Name.help">The name of the setting.</resource>
                        <!--<resource key="dev.demo.ddheadincludearticle.default.Title">New article for Dev Demo template using
                                headinclude tag</resource>-->
                        <resource key="label.OpenCmsMOSJCustomSetting.Value">Value</resource>
                        <resource key="label.OpenCmsMOSJCustomSetting.Value.help">The custom value.</resource>
                    </bundle>
                </xmlbundle>
            </resourcebundles>
            <layouts>
                <layout element="Name" widget="SelectorWidget" 
                        configuration="name|type*|step|enforceEqualSteps|dots|maxStaggerLines|xLabelRotation|stacking|errorToggler|trendLine|orderIndex|connectNulls|color|dashStyle|lineThickness|dotThickness|minValue|integerValues|xAxisOnTop|invertGrouping" />
                <!--<layout element="Stacking" widget="SelectorWidget" configuration="normal*|percent" />-->
            </layouts>
            <validationrules>
                <rule element="Value" regex="!(^$)|(^\s.*)|(.*\s$)" type="warning" message="Please avoid empty value, trailing space, and leading space here." />
            </validationrules>
            <relations />
        </xsd:appinfo>
    </xsd:annotation>
</xsd:schema>
